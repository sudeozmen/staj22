@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html>
<head>
    <style>
        input[type=text] {
            width: 100%;
            box-sizing: border-box;
            border: 2px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
            background-color: white;
            background-position: 10px 10px;
            background-repeat: no-repeat;
            padding: 12px 20px 12px 40px;
            text-transform:capitalize;
        }
        .button-container {
            display: flex;
            justify-content: center;
            align-items: center;
            gap:50px;
        }
        .btn {
            padding: 10px 100px;
            font-size: 16px;
        }
    </style>
</head>
<body>
    <div>
        <section>
            <form method="post" asp-controller="Home" asp-action="Insert">
                <div>
                    <table class="table table-striped">
                        <thead>
                         <tr><th>BARCODE</th></tr>
                        <td><input type="text" name="BARCODE" onkeypress="return /[0-9]/i.test(event.key)" maxlength="10" required></td>
                        <tr><th>NAME</th></tr>
                        <td><input type="text" name="NAME" required></td>
                        <tr><th>AUTHOR</th></tr>
                        <td> <input type="text" name="AUTHOR" required></td>
                        <tr><th>PAGE</th></tr>
                        <td><input type="text" name="PAGE" onkeypress="return /[0-9]/i.test(event.key)" maxlength="4" required></td>
                        </thead>
                    </table>
                </div>
                <div class="button-container">
                <div>
                    <input type="submit" class="btn btn-outline-dark" value="ADD" />
                </div>
            </form>
            <div>
                <form method="get" asp-controller="Home" asp-action="Index">
                    <input type="submit" class="btn btn-outline-warning" value="CANCEL" />
                </form>
            </div>
            <br />
            </div>
    @if (ViewBag.result != null)
    {
        <p>@ViewBag.result</p>
    }
        </section>
    </div>
</body>
</html>

